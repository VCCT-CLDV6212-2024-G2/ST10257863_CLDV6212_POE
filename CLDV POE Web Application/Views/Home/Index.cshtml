<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CLDV_POE_Web_Application.styles.css" asp-append-version="true" />
</head>
<body>
	<h1>@ViewData["Title"]</h1>

	<div class="center-frame">

		<!-- Profile Creation Section -->
		<div class="frame-container profile-section">
			<form asp-action="AddCustomerProfile" method="post">
				<div class="input-field">
					<label for="firstName">First Name</label>
					<input type="text" id="firstName" name="FirstName" placeholder="First Name" />
				</div>
				<div class="input-field">
					<label for="lastName">Last Name</label>
					<input type="text" id="lastName" name="LastName" placeholder="Last Name" />
				</div>
				<div class="input-field">
					<label for="email">Email</label>
					<input type="email" id="email" name="Email" placeholder="Email" />
				</div>
				<div class="input-field">
					<label for="phoneNumber">Phone Number</label>
					<input type="text" id="phoneNumber" name="PhoneNumber" placeholder="Phone Number" />
				</div>
				<div class="button-container">
					<button type="submit" class="button">Add Profile</button>
				</div>
			</form>
		</div>

		<div class="centered-container">
			<!-- File Upload Section -->
			<div class="frame-container file-upload-section">
				<form asp-action="UploadImage" method="post" enctype="multipart/form-data" class="file-upload-form">
					<input type="file" name="file" id="uploadImageFile" />
					<button type="submit" class="button">Upload Product Image</button>
				</form>
				<form asp-action="UploadContract" method="post" enctype="multipart/form-data" class="file-upload-form">
					<input type="file" name="file" id="uploadContractFile" />
					<button type="submit" class="button">Upload Contract</button>
				</form>
			</div>

			<!-- Order Processing Section -->
			<div class="frame-container order-submit-section">
				<form asp-action="ProcessOrder" method="post">
					<div class="input-field">
						<label for="orderId">Order ID</label>
						<input type="text" id="orderId" name="orderId" placeholder="Order ID" />
					</div>
					<div class="button-container">
						<button type="submit" class="button">Process Order</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</body>
</html>